{
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],

            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ],
    "version": "2.0.0",

    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        //"panel": "shared",
        //"showReuseMessage": true,
        //"clear": false
    }
}